    <header>
        <h1>Professional Report</h1>
        <p>Generated on October 1, 2023</p>
    </header>
    <main>
        <section class="summary">
            <h2>Summary</h2>
            <p>This report provides an overview of your financial activities for the month of September 2023.</p>
        </section>
        <section class="income-expenses">
            <h2>Income and Expenses</h2>
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Source of Income/Expense</th>
                            <th>Amount (Rs)</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Sample Data -->
                        <tr>
                            <td>2023-09-01</td>
                            <td>Revenue from Digital Pathsala Courses</td>
                            <td>25,000</td>
                        </tr>
                        <tr>
                            <td>2023-09-05</td>
                            <td>Food Expenses</td>
                            <td>5,000</td>
                        </tr>
                        <!-- Add more rows as needed -->
                    </tbody>
                </table>
            </div>
        </section>
        <section class="savings-goals">
            <h2>Savings Goals</h2>
            <div class="goal">
                <h3>Vacation</h3>
                <p>Save for a vacation to your dream destination. Target Amount: Rs. 6,000</p>
                <div class="progress-bar">
                    <div class="progress" style="width: 60%;"></div>
                </div>
                <p>Progress: 60%</p>
            </div>
            <div class="goal">
                <h3>Emergency Fund</h3>
                <p>Build an emergency fund for unexpected expenses. Target Amount: Rs. 5,000</p>
                <div class="progress-bar">
                    <div class="progress" style="width: 35%;"></div>
                </div>
                <p>Progress: 35%</p>
            </div>
            <!-- Add more goals as needed -->
        </section>
    </main>
  

